<?xml version="1.0"?>
<project default="all" 
	xmlns:au="antlib:org.apache.ant.antunit"
	xmlns:deb="antlib:org.apache.ant.debian">

    <property name="testfile" value="cf"/>

    <target name="tearDown">
      <delete file="${java.io.tmpdir}/${testfile}"/>
    </target>

    <target name="testControlFileCreated">
      <au:assertFileDoesntExist file="${java.io.tmpdir}/${testfile}"/>
      <deb:control file="${java.io.tmpdir}/${testfile}" package="ant" version="1.71alpha" maintainer="kevj@apache.org">
        <dependency name="test1"/>
        <dependency name="test2"/>
      </deb:control>
      <au:assertFileExists file="${java.io.tmpdir}/${testfile}"/>
    </target>

    <target name="all">
      <au:antunit>
        <fileset file="${ant.file}"/>
        <au:plainlistener/>
      </au:antunit>
    </target>
</project>